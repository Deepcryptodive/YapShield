{
  "manifest_version": 3,
  "name": "SlopShield",
  "version": "0.1",
  "description": "Filters AI slop posts on X",
  "permissions": [
    "action",
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/ethers.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
